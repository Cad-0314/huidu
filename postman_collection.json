    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "const merchantKey = pm.collectionVariables.get(\"merchant_key\");",
                    "if (!merchantKey) {",
                    "    console.log(\"Merchant Key not found\");",
                    "    return;",
                    "}",
                    "",
                    "// Get JSON body string",
                    "let bodyStr = pm.request.body.raw || \"\";",
                    "",
                    "// Handle comments in JSON if any (simple strip) or just use raw",
                    "// For MD5(body + key), we use exact raw body string",
                    "",
                    "// Generate Signature: MD5(body + key)",
                    "const signString = bodyStr + merchantKey;",
                    "const signature = CryptoJS.MD5(signString).toString(); // Hex lowercase",
                    "",
                    "pm.collectionVariables.set(\"signature\", signature);",
                    "console.log(\"Sign String Generated for:\", bodyStr);"
                ]
            }
        }
